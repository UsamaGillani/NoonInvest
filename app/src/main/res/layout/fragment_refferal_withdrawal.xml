<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WithDrawals.RefferalWithdrawalFragment"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtview_info_refferal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Account Information"
        android:textColor="@color/textview_color"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/activation_date_referrals"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/textview_color"
        android:textSize="12sp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtview_info_refferal"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_Account_No_Refferals"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="510dp"
        android:textColor="@color/textview_color"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activation_date_referrals"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_Bank_Name_Refferals"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="510dp"
        android:textColor="@color/textview_color"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Account_No_Refferals"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/daily_amount_referrals"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="510dp"
        android:textColor="@color/textview_color"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Bank_Name_Refferals"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/referral_total_available_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textColor="@color/textview_color"
        android:textSize="12sp"
        android:text="Available Amount:"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/referral_total_available_amount"
        app:layout_constraintTop_toTopOf="@id/referral_total_available_amount"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/referral_total_available_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/textview_color"
        android:textSize="28sp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/referral_total_available_amount_tv"
        app:layout_constraintTop_toBottomOf="@+id/daily_amount_referrals"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/btn_request_amount_refferals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        app:backgroundTint="@color/backgroundcolor"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="REQUEST YOUR AMOUNT"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_Account_No_Refferals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>